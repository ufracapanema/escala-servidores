<div class="container">
    <div class="header">
        <h2 style="margin:0">Escala de Horários</h2>
        <select id="select-dia">
            <option value="0">Segunda-feira</option>
            <option value="1">Terça-feira</option>
            <option value="2">Quarta-feira</option>
            <option value="3">Quinta-feira</option>
            <option value="4">Sexta-feira</option>
        </select>
    </div>

    <div id="loading" class="loader">⏳ Carregando dados...</div>

    <div id="grade-container" class="grid-escala" style="display: none;">
        <div class="grid-header" style="text-align:left">Servidor</div>
        <div class="grid-header">Manhã <span>07:00 | 13:00</span></div>
        <div class="grid-header">Tarde <span>13:00 | 19:00</span></div>
        <div class="grid-header">Noite <span>19:00 | 01:00</span></div>
        <div class="grid-header">Total</div>

        <div id="grid-corpo" style="display: contents;"></div>

        <div class="grid-footer" id="grid-rodape"></div>
    </div>
</div>

<script>
    const API_URL = 'https://script.google.com/macros/s/AKfycbzHe6FYRN5bwebFslDF-pecwnUWpY9WXDF_Nl9V1sYncbwfIVmZ0k-Mqu6WUDNoYZtZxw/exec';
    let database = {};

    function formatarH(decimal) {
        if (decimal === 0) return "-";
        const h = Math.floor(decimal);
        const m = Math.round((decimal - h) * 60);
        return m === 0 ? `${h}h` : `${h}h ${m}m`;
    }

    function calc(txt) {
        if (!txt || !txt.includes('|')) return 0;
        const p = txt.split('|').map(x => x.trim());
        const conv = (s) => { 
            const [h, m] = s.split(':').map(Number); 
            return (h * 60) + (m || 0); 
        };
        let d = conv(p[1]) - conv(p[0]);
        return (d < 0 ? d + 1440 : d) / 60;
    }

    async function init() {
        try {
            const res = await fetch(API_URL);
            const data = await res.json();
            const rows = data.slice(1);
            for (let i = 0; i < rows.length; i += 3) {
                const nome = rows[i] ? rows[i][2]?.trim() : null;
                if (nome && !nome.includes('@')) database[nome] = [rows[i], rows[i+1], rows[i+2]];
            }
            document.getElementById('select-dia').addEventListener('change', montar);
            montar();
            document.getElementById('loading').style.display = 'none';
            document.getElementById('grade-container').style.display = 'grid';
        } catch (e) { document.getElementById('loading').innerText = "Erro ao carregar dados."; }
    }

    function montar() {
        const dia = parseInt(document.getElementById('select-dia').value);
        let html = "", sM = 0, sT = 0, sN = 0;

        Object.keys(database).sort().forEach(nome => {
            const blocos = database[nome];
            let hM = calc(blocos[0][3]), hT = calc(blocos[1][3]), hN = calc(blocos[2][3]);
            let total = hM + hT + hN;

            if (total > 0) {
                sM += hM; sT += hT; sN += hN;
                html += `
                    <div class="grid-item nome-servidor">${nome}</div>
                    <div class="grid-item">${blocos[0][3] || "-"}</div>
                    <div class="grid-item">${blocos[1][3] || "-"}</div>
                    <div class="grid-item">${blocos[2][3] || "-"}</div>
                    <div class="grid-item total-horas">${formatarH(total)}</div>
                `;
            }
        });

        document.getElementById('grid-corpo').innerHTML = html;
        document.getElementById('grid-rodape').innerHTML = `
            <div class="footer-item" style="text-align:left">TOTAIS</div>
            <div class="footer-item">${formatarH(sM)}</div>
            <div class="footer-item">${formatarH(sT)}</div>
            <div class="footer-item">${formatarH(sN)}</div>
            <div class="footer-item" style="background: #2563eb;">${formatarH(sM+sT+sN)}</div>
        `;
    }

    init();
</script>

</body>
</html>
